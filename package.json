  },
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "jest": "^29.7.0",
    "typescript": "^5.4.5"
  },
  "main": "index.js",
  "type": "module",
  "files": [
    "/CHANGELOG.md",
    "/index.js",
    "/index.d.ts",
    "/src"
  ],
  "engines": {
